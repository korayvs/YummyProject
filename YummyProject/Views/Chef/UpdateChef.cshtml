@model YummyProject.Models.Chef
@{
    ViewBag.Title = "UpdateChef";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Şef Güncelleme Sayfası</h2>
<br />

<form method="post">

    @Html.HiddenFor(x => x.ChefId)
    <label> Image Url</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <p class="text-danger"> @Html.ValidationMessageFor(x => x.ImageUrl) </p>
    <br />
    <label>Name</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <p class="text-danger"> @Html.ValidationMessageFor(x => x.Name) </p>
    <br />
    <label> Title</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <p class="text-danger"> @Html.ValidationMessageFor(x => x.Title) </p>
    <br />
    <label> Description</label>
    @Html.TextAreaFor(x => x.Description, 5, 1, new { @class = "form-control" })
    <p class="text-danger"> @Html.ValidationMessageFor(x => x.Description) </p>
    <br />

    <button class="btn btn-outline-success">Güncelle</button>

</form>