@model List<YummyProject.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>Referanslar</h2>
<br />

<table class="table table-bordered">

    <thead>

        <tr>
            <th>#</th>
            <th>Resim </th>
            <th>Ad Soyad</th>
            <th>Ünvanı</th>
            <th>Mesaj</th>
            <th>Puanı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td><img src="@item.ImageUrl" style="width:200px; height:200px" alt="Project Image" /></td>
                    <td>@item.NameSurname</td>
                    <td>@item.Title</td>
                    <td>@item.Comment</td>
                    <td>@item.Rating</td>
                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-info">Güncelle</a></td>
                </tr>
            }
        }

        else
        {
            <tr>
                <td colspan="8" class="text-center">Referans yok.</td>
            </tr>
        }
    </tbody>

</table>
<br />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert"> @TempData["ErrorMessage"] </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert"> @TempData["SuccessMessage"] </div>
}

<a href="/Testimonial/AddTestimonial" class="btn btn-primary">Yeni Referans Ekle</a>