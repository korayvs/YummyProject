@model List<YummyProject.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>
<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">Toplam Çorba Sayısı</div>
            <span class="card-body display-6"><strong>@ViewBag.soupCount</strong></span>
            <div class="card-footer d-flex align-items-center justify-content-between">
                @*<a class="small text-white stretched-link" href="#">View Details</a>*@
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">En Pahalı Ürün</div>
            <span class="card-body display-6"><strong>@ViewBag.mostExpensive</strong></span>
            <div class="card-footer d-flex align-items-center justify-content-between">

                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">Ortalama Ürün Fiyatı</div>
            <span class="card-body display-6"><strong>@ViewBag.avgPrice.ToString("00.00") ₺</strong></span>
            <div class="card-footer d-flex align-items-center justify-content-between">

                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body">En Ucuz Ürün</div>
            <span class="card-body display-6"><strong>@ViewBag.cheapestPrice</strong></span>
            <div class="card-footer d-flex align-items-center justify-content-between">

                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card bg-black text-white mb-4">
            <div class="card-body">En Pahalı Etkinlik</div>
            <span class="card-body display-6"><strong>@ViewBag.eventmostExpensive</strong></span>
            <div class="card-footer d-flex align-items-center justify-content-between">

                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">Toplam Ana Yemek Sayısı</div>
            <span class="card-body display-6"><strong>@ViewBag.maincourseCount</strong></span>
            <div class="card-footer d-flex align-items-center justify-content-between">

                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">Toplam Tatlı Sayısı</div>
            <span class="card-body display-6"><strong>@ViewBag.dessertCount</strong></span>
            <div class="card-footer d-flex align-items-center justify-content-between">

                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">Toplam İçecek Sayısı</div>
            <span class="card-body display-6"><strong>@ViewBag.drinkCount</strong></span>
            <div class="card-footer d-flex align-items-center justify-content-between">

                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>

</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Menüye Eklenen Yeni Ürünler
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Yemek Adı</th>
                    <th>İçindekiler</th>
                    <th>Fiyat</th>
                </tr>
            </thead>
            @*<tfoot>
                <tr>
                </tr>
            </tfoot>*@
            <tbody>
                
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Ingredients</td>
                        <td>@item.Price</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>