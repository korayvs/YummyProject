@model YummyProject.Models.About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımızda Güncelleme Sayfası</h2>
<br />

<form method="post">
    @Html.HiddenFor(x => x.AboutId)
    <label>1.Resim Url</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.ImageUrl)</p>
    <br />
    <label>2.Resim Url</label>
    @Html.TextBoxFor(x => x.ImageUrl2, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.ImageUrl2)</p>
    <br />
    <label>1.Madde</label>
    @Html.TextBoxFor(x => x.Item1, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.Item1)</p>
    <br />
    <label>2.Madde</label>
    @Html.TextBoxFor(x => x.Item2, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.Item2)</p>
    <br />
    <label>3.Madde</label>
    @Html.TextBoxFor(x => x.Item3, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.Item3)</p>
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 1, 30, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.Description)</p>
    <br />
    <label>Video Url</label>
    @Html.TextBoxFor(x => x.VideoUrl, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.VideoUrl)</p>
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.PhoneNumber)</p>
    <br />

    <button class="btn btn-outline-success">Güncelle</button>

</form>