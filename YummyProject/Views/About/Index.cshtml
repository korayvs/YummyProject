@model List<YummyProject.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımızda</h2>
<br />

<table class="table table-bordered table-hover">

    <thead>

        <tr>
            <th>#</th>
            <th>1.Resim</th>
            <th>2.Resim</th>
            <th style="width: 10%">1.Madde</th>
            <th style="width: 10%">2.Madde</th>
            <th style="width: 10%">3.Madde</th>
            <th style="width: 20%">Açıklama</th>
            <th style="width: 10%">Video</th>
            <th style="width: 10%">Telefon</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th>@item.AboutId</th>
                <td><img src="@item.ImageUrl" style="width:75px;height:75px" /> </td>
                <td><img src="@item.ImageUrl2" style="width:75px;height:75px" /> </td>
                <td>@item.Item1</td>
                <td>@item.Item2</td>
                <td>@item.Item3</td>
                <td>@item.Description</td>
                <td>@item.VideoUrl</td>
                <td>@item.PhoneNumber</td>
                <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
                <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-info">Güncelle</a></td>

            </tr>
        }
    </tbody>

</table>
<br />
<a href="/About/AddAbout" class="btn btn-primary">Yeni Hakkımda Ekle</a>
