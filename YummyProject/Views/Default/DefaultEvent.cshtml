@model List<YummyProject.Models.Event>
<section id="events" class="events section">

    <div class="container-fluid" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper init-swiper">

            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  },
                  "breakpoints": {
                    "320": {
                      "slidesPerView": 1,
                      "spaceBetween": 40
                    },
                    "1200": {
                      "slidesPerView": 3,
                      "spaceBetween": 1
                    }
                  }
                }
            </script>

            <div class="swiper-wrapper">

                @foreach (var evnt in Model)
                {
                    <div class="swiper-slide event-item d-flex flex-column justify-content-end" style="background-image: url(@evnt.ImageUrl)">
                        <h3>@evnt.Title</h3>
                        <div class="price align-self-start">@evnt.Price ₺</div>
                        <p class="description">
                            @evnt.Description
                        </p>
                    </div><!-- End Event item -->
                }

            </div>

            <div class="swiper-pagination"></div>
        </div>

    </div>

</section>