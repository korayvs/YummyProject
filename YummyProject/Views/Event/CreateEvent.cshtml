@model YummyProject.Models.Event
@{
    ViewBag.Title = "CreateEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Etkinlik Oluşturma Sayfası</h2>
<br />

<form method="post">

    <label>Resim</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <p class="text-danger"> @Html.ValidationMessageFor(x => x.ImageUrl) </p>
    <br />
    <label>Etkinlik Adı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <p class="text-danger"> @Html.ValidationMessageFor(x => x.Title) </p>
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 3, 1, new { @class = "form-control" })
    <p class="text-danger"> @Html.ValidationMessageFor(x => x.Description) </p>
    <br />
    <label>Fiyat</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <p class="text-danger"> @Html.ValidationMessageFor(x => x.Price) </p>
    <br />

    <button class="btn btn-outline-success">Kaydet</button>

</form>